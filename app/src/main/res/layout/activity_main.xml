<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_calculator"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="11dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="31dp" />

    <TextView
        android:id="@+id/result_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layoutCal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="62dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1"
        android:paddingVertical="15dp"
        android:id="@+id/buttons_layoutCal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!--    Button C-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="31dp"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:id="@+id/buttonCal_c"
                android:backgroundTint="#A1A1A1"
                android:text="C" />

<!--            //Button (-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="31dp"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:id="@+id/buttonCal_open_bracket"
                android:backgroundTint="#A1A1A1"
                android:text="(" />

<!--            //Button )-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="31dp"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:backgroundTint="#A1A1A1"
                android:id="@+id/buttonCal_close_bracket"
                android:text=")" />

<!--            //Button /-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="31dp"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:id="@+id/buttonCal_divide"
                android:backgroundTint="#A1A1A1"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
<!--            //Button 7-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="31dp"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:id="@+id/buttonCal_7"
                android:text="7" />
<!--            //Button 8-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
